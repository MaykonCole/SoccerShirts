@model CarrinhoCompraViewModel

<div class="row checkoutForm">

    <img src="~/imagens/Full-Cart-icon.png" />
    <div>
        <h4> Seu carrinho de compras : </h4>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Camisa</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarrinhoCompra.CarrinhoDeCompraItems)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-left">@item.Camisa.Nome</td>
                    <td class="text-right">@item.Camisa.Preco.ToString("c")</td>
                    <td class="text-right">
                        @((item.Quantidade * item.Camisa.Preco).ToString("c"))
                    </td>
                    <td class="text-center">
                        <a asp-controller="CarrinhoDeCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-CamisaId="@item.Camisa.CamisaId"><img src="~/imagens/delete.png" /></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CarrinhoCompraTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Adicionar mais Camisas<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menuitem">
                    <li><a asp-controller="Camisa" asp-action="ListarCamisas" asp-route-categoria="Normal"><b>Internacional</b></a></li>
                    <li><a asp-controller="Camisa" asp-action="ListarCamisas" asp-route-categoria="Natural"><b>Nacional</b></a></li>
                    <li><a asp-controller="Camisa" asp-action="ListarCamisas" asp-route-categoria="Natural"><b>Seleção</b></a></li>
                </ul>
            </a>
        </div>
    </div>
</div>


