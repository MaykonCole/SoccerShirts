@model Camisa

<div class="col-md-4 col-sm-4 col-lg-4">
    <img src="@Model.ImagemUrl" class="card-img-top imageResponsive" alt="@Model.Nome" />
    <div class="figure-caption">
        <h4 class="formPullRightButton">@Model.Preco.ToString("c")</h4>
        <h4>
            <a asp-controller="Camisa" asp-action="Details" asp-route-CamisaId="@Model.CamisaId">@Model.Nome</a>
        </h4>
        <h6>@Model.DescricaoCurta</h6>
    </div>
    <div text-right">
        <p class="formPullRightButton">
            <a class="btn btn-primary" asp-controller="CarrinhoDeCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-CamisaId="@Model.CamisaId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>
