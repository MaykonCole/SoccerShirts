
<li class="dropdown">
    <a asp-controller="Camisa" asp-action="ListarCamisas" class="dropdown-toggle" data-toggle="dropdown" style="color:white">Camisas   </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a asp-controller="Camisa" asp-action="ListarCamisas" style="color:black"
                   asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Camisa" asp-action="ListarCamisas" asp-route-categoria="" style="color:black">Todas as camisas</a>
        </li>
    </ul>
</li>
